<div class="form-container">
  <div class="form-box">
    <h2 class="form-heading">Change your password</h2>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password,
                    label: "New password",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { class: "custom-input", autocomplete: "new-password", placeholder: "New Password" } %>
        <%= f.input :password_confirmation,
                    label: "Confirm your new password",
                    required: true,
                    input_html: { class: "custom-input", autocomplete: "new-password", placeholder: "Confirm New Password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Change", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
